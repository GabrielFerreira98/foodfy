{% extends "index/layout.njk" %}

{% block content%}

    <div class="cards" >

    <h2>Buscando por</h2>

    {% for item in items %}

    
        <div class="card" id="{{item.id}}">
            <img src="{{item.image}}" alt="item.title">
            <div class="description">
                <h3 class="wrapper1">{{item.title}}</h3>
                <h5 class="wrapper2">{{item.author}}</h5>
            </div>
        </div>       

    {% endfor %}

    </div>

{% endblock %}

{% block script %}
<script src="../../../../../scripts/scripts.js"></script>
{% endblock %}