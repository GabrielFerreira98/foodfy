{% extends "session/layout.njk" %}

{%block header%}

<div class="user-headerContainer login">
    <h2>Nova Senha</h2>
</div>
    
{%endblock%}

{% block content %}

<div class="login container">
    <form method="POST" action="/users/password-reset" >

        <div class="individualForm">
            <h4>Email</h4>
            <input 
                type="email"
                name="email"
                placeholder="   Digite seu email"
                value="{{ user.email }}"
                onblur="Validate.apply(this, 'isEmail')">
        </div>

        <div class="individualForm">
            <h4>Nova Senha</h4>
                <div>
                    <input 
                        type="password"  
                        name="password"
                        placeholder="   Digite sua senha!"
                        >
        
                </div>
        </div>

        <div class="individualForm">
            <h4>Repetição de Senha</h4>
                <div>
                    <input 
                        type="password"  
                        name="passwordRepeat"
                        placeholder="   Repita sua senha!"
                        >
                </div>
        </div>

        <input type="hidden" name="token" value="{{token}}">

        
        <div class="buttons">
        
            <button type="submit" class="user-submit">Nova Senha</button>
            
        </div>

    </form>
</div>

{% endblock %}
