{% extends "session/layout.njk" %}

{%block header%}

<div class="user-headerContainer login">
    <h2>Esqueceu a Senha?</h2>
</div>
    
{%endblock%}

{%block content%}

<div class="login container">
    <form method="POST" action="/users/forgot-password" >

        <div class="individualForm">
            <h4>Email</h4>
            <input 
                type="email"
                name="email"
                placeholder="   Digite seu email"
                value="{{ user.email }}"
                onblur="Validate.apply(this, 'isEmail')">
        </div>
        
        <div class="buttons">
        
            <button type="submit" class="user-submit">Recuperar</button>
            
        </div>

    </form>
</div>

{% endblock %}